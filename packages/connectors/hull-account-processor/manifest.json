{
  "name": "Account Processor",
  "description": "Recompute custom properties and emit events with Javascript logic whenever an account is updated",
  "tags": [
    "batch-accounts",
    "smart-notifier",
    "kraken-exports"
  ],
  "logo": "logo.png",
  "picture": "picture.png",
  "ui": false,
  "tabs": [
    {
      "title": "Code Editor",
      "url": "/admin.html",
      "size": "large",
      "setup": false,
      "workspace": true,
      "editable": true,
      "handler": "admin"
    }
  ],
  "readme": "readme.md",
  "version": "0.3.0",
  "private_settings": [
    {
      "name": "sentry_dsn",
      "title": "Sentry DSN",
      "description": "URL of a sentry instance to collect logs and exception notifications",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "synchronized_account_segments",
      "title": "Account Filter",
      "description": "Which Accounts are sent through the processor",
      "type": "array",
      "format": "accountSegment",
      "options": {
        "standard": {
          "ALL": "All Accounts"
        }
      },
      "default": [
        "ALL"
      ]
    },
    {
      "name": "code",
      "title": "Code",
      "description": "Enter Javascript code here, It will receive the data in the middle column, can emit `traits()`. Preview results on the right. Save when finished",
      "type": "string",
      "default": "console.log(`Hello ${account.name}`);",
      "format": "hidden"
    }
  ],
  "resources": [],
  "settings_sections": [
    {
      "title": "Configuration",
      "description": "Configure the way the processor runs",
      "properties": [
        "private_settings.synchronized_account_segments"
      ]
    }
  ],
  "json": [
    {
      "url": "/config",
      "handler": "configHandler"
    },
    {
      "url": "/entry",
      "handler": "entityHandler",
      "options": {
        "respondWithError": true
      }
    },
    {
      "url": "/preview",
      "handler": "previewHandler"
    }
  ],
  "subscriptions": [
    {
      "url": "/smart-notifier",
      "conditions": {
        "channels": {
          "only": [
            "account:update"
          ]
        },
        "segments": {
          "account:update": "private_settings.synchronized_account_segments"
        }
      },
      "channels": [
        {
          "channel": "account:update",
          "handler": "accountUpdate"
        }
      ]
    }
  ],
  "status": {
    "initial_value": "ok",
    "url": "/status",
    "type": "cron",
    "value": "*/30 * * * *",
    "handler": "statusHandler"
  },
  "statuses": [
    {
      "initial_value": "ok",
      "url": "/status",
      "type": "cron",
      "value": "*/30 * * * *",
      "handler": "statusHandler"
    }
  ]
}
