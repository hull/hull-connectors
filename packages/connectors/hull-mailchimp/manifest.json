{
  "name": "Mailchimp",
  "version": "0.1.35-monorepo",
  "description": "Powerful segmentation and enrichment for Mailchimp - the worldâ€™s favorite email platform",
  "tags": [
    "outgoing",
    "incoming",
    "batch",
    "oneColumn",
    "smart-notifier",
    "first-install",
    "kraken-exports"
  ],
  "source": "mailchimp",
  "logo": "logo.png",
  "picture": "picture.png",
  "private_settings": [
    {
      "name": "oauth",
      "title": "Oauth",
      "description": "Authenticate with Mailchimp",
      "format": "oauth",
      "type": "string",
      "handler": "oauth",
      "url": "/auth",
      "options": {
        "strategy": {
          "grant_type": "authorization_code"
        }
      }
    },
    {
      "name": "configuration_title",
      "title": "Configuration",
      "format": "title",
      "type": "string"
    },
    {
      "name": "synchronized_user_segments",
      "title": "User Filter",
      "type": "array",
      "format": "segment",
      "options": {
        "standard": {
          "ALL": "All Users"
        }
      }
    },
    {
      "type": "string",
      "name": "mailchimp_list_id",
      "description": "Mailchimp List ID selected by user",
      "title": "Mailchimp List ID",
      "url": "/select",
      "handler": "selectList",
      "format": "select",
      "options": {
        "loadOptions": "/select",
        "allowCreate": false,
        "placeholder": "Select list to synchronize"
      }
    },
    {
      "name": "mailchimp_list_name",
      "title": "Mailchimp List Name",
      "description": "Mailchimp List Name selected by user",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "api_key",
      "title": "API Key",
      "description": "Token or API Key",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "api_endpoint",
      "title": "API Endpoint",
      "description": "Mailchimp API endpoint",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "domain",
      "title": "API Domain",
      "description": "Mailchimp API Domain",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "segment_mapping",
      "type": "object",
      "properties": {},
      "format": "hidden"
    },
    {
      "name": "interest_category_id",
      "title": "Interest category ID",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "interests_mapping",
      "type": "object",
      "properties": {},
      "format": "hidden"
    },
    {
      "name": "outgoing_user_attributes",
      "title": "Mapping from Hull to Mailchimp",
      "type": "array",
      "format": "traitMapping",
      "url": "/schema/user_fields",
      "handler": "schemaUserFields",
      "options": {
        "loadOptions": "/schema/user_fields",
        "direction": "outgoing",
        "placeholder": "Mailchimp Merge Field",
        "allowCreate": false
      },
      "default": [
        {
          "hull": "first_name",
          "service": "FNAME",
          "overwrite": false
        },
        {
          "hull": "last_name",
          "service": "LNAME",
          "overwrite": false
        }
      ]
    },
    {
      "name": "force_removal_from_static_segments",
      "description": "When enabled when processing batch extract it will try to remove user from static segments they should not be in",
      "default": false,
      "type": "boolean",
      "format": "hidden"
    },
    {
      "name": "fetch_user_activity_on_update",
      "description": "When enabled it will get user activites on user:update",
      "default": false,
      "type": "boolean",
      "format": "hidden"
    }
  ],
  "readme": "readme.md",
  "ui": false,
  "subscriptions": [
    {
      "url": "/smart-notifier",
      "conditions" : {
        "channels": { "only": [
          "user:update",
          "ship:update",
          "users_segment:update",
          "users_segment:delete"
        ] },
        "segments": {
          "user:update": ["private_settings.synchronized_user_segments"]
        }
      },
      "channels": [
        {
          "channel": "user:update",
          "handler": "user_update"
        },
        {
          "channel": "ship:update",
          "handler": "ship_update"
        },
        {
          "channel": "users_segment:update",
          "handler": "users_segment_update"
        },
        {
          "channel": "users_segment:delete",
          "handler": "users_segment_delete"
        }
      ]
    }
  ],
  "batches": [
    {
      "url": "/batch",
      "channels": [
        {
          "channel": "user:update",
          "handler": "user_update",
          "options": {
            "maxSize": 500
          }
        }
      ]
    }
  ],
  "incoming": [
    {
      "url": "/mailchimp",
      "handler": "webhook",
      "options": {
        "bodyParser": "urlencoded",
        "credentialsFromQuery": true
      }
    }
  ],
  "json": [
    {
      "url": "/track",
      "handler": "track"
    },
    {
      "url": "/sync",
      "handler": "sync",
      "name": "syncIn",
      "title": "Fetch List",
      "format": "action",
      "options": {
        "confirm": {
          "action": "fetch",
          "text": "You are going to resync Mailchimp with Hull. This will empty the list you picked ? This will remove all interest groups and static segments (possibly breaking any automation configuration) and can generate a lot of traffic. Are you sure?",
          "button": "Start Fetching",
          "entity": "users"
        }
      }
    },
    {
      "url": "/fetch-recent-users",
      "handler": "fetchRecentUsers",
      "name": "fetchRecentUsers",
      "title": "Fetch Recent Users",
      "format": "action",
      "options": {
        "confirm": {
          "action": "fetch",
          "text": "You are going to trigger a fetch for Mailchimp contacts that got updated for the last 24 hours ago. This might take long if you have recently imported large amounts of contacts to your Mailchimp account. Confirm your choice?",
          "button": "Start Fetching",
          "entity": "users"
        }
      }
    },
    {
      "url": "/sync-out",
      "handler": "syncOut"
    }
  ],
  "settings_sections": [
    {
      "title": "Connect with Mailchimp",
      "step": "credentials",
      "properties": [
        "private_settings.oauth"
      ]
    },
    {
      "title": "Select List",
      "description": "After you have authenticated with Mailchimp, please select the list that Hull will synchronize with. You can only pick one list, and you will have to reinstall the connector if you wish to change it afterwards. Once you have selected the list, please click Save on the top right",
      "step": "credentials",
      "properties": [
        "private_settings.mailchimp_list_id"
      ]
    },
    {
      "title": "Fetch Data from Mailchimp",
      "description": "Trigger a full fetch of the entire mailchimp list. Be careful. If your list is large, it might take a while",
      "properties": [
        "json.syncIn",
        "json.fetchRecentUsers"
      ]
    },
    {
      "title": "User Filter",
      "description": "Send users to Mailchimp when belonging to at least one of these segments.  If this segment list is empty, no users will be sent.  If \"All Users\" is selected, all users are sent",
      "properties": [
        "private_settings.synchronized_user_segments"
      ]
    },
    {
      "title": "Outgoing Sync",
      "step": "actions",
      "description": "Configure how the data is sent to Mailchimp",
      "properties": [
        "private_settings.outgoing_user_attributes"
      ]
    }
  ],
  "schedules": [
    {
      "url": "/track",
      "type": "cron",
      "handler": "track",
      "value": "7 */6 * * *"
    }
  ],
  "status": {
    "url": "/status",
    "handler": "status",
    "initial_value": "setupRequired",
    "type": "cron",
    "value": "*/30 * * * *"
  },
  "statuses": [
    {
      "url": "/status",
      "handler": "status",
      "initial_value": "setupRequired",
      "type": "cron",
      "value": "*/30 * * * *"
    }
  ]
}
