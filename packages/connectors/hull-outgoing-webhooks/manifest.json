{
  "name": "Outgoing User Webhooks",
  "description": "Send Hull Users updates as Webhooks",
  "tags": [
    "batch",
    "smart-notifier",
    "kraken-exports"
  ],
  "picture": "picture.png",
  "version": "0.1.19-monorepo",
  "tabs": [
    {
      "title": "Code Editor",
      "url": "/admin.html",
      "size": "large",
      "setup": false,
      "workspace": true,
      "editable": true,
      "handler": "admin"
    }
  ],
  "private_settings": [
    {
      "name": "throttle_rate",
      "title": "Requests rate limit",
      "description": "Number of requests done every Interval (as defined below)",
      "default": 10,
      "type": "number"
    },
    {
      "name": "throttle_per_rate",
      "title": "Interval for request throughput",
      "description": "Set the number of milliseconds to define interval where above rate limit will be applied",
      "default": 1000,
      "type": "number"
    },
    {
      "name": "concurrency",
      "title": "Requests concurrency",
      "description": "Number of maximum concurrent, in-flight requests done by connector",
      "default": 10,
      "type": "number"
    },
    {
      "name": "code",
      "title": "Code",
      "description": "Enter JSON mapping code here",
      "type": "string",
      "default": "{\n \"email\": user.email,\n \"event_name\": events[event=\"Viewed Page\"].event,\n \"event_time\": events[event=\"Viewed Page\"].created_at\n }",
      "format": "hidden"
    },
    {
      "name": "headers",
      "title": "Header Array",
      "type": "array",
      "format": "table",
      "default": [
        {
          "key": "Accept",
          "value": "application/json"
        }
      ],
      "items": {
        "type": "object",
        "required": [
          "key",
          "value"
        ],
        "properties": {
          "key": {
            "title": "Header Key",
            "type": "string",
            "format": "string"
          },
          "value": {
            "title": "Header Value",
            "type": "string",
            "format": "string"
          }
        }
      }
    },
    {
      "name": "synchronized_user_events",
      "title": "Emit on new Event",
      "type": "array",
      "format": "event",
      "default": [],
      "options": {
        "standard": {
          "CREATED": "User Created"
        }
      }
    },
    {
      "name": "synchronized_user_segments",
      "title": "User Filter",
      "description": "As a precondition to the triggers being evaluated, the user must belong to one of the defined segments.",
      "type": "array",
      "default": [],
      "format": "segment"
    },
    {
      "name": "synchronized_user_segments_enter",
      "title": "Emit on Entering these segments",
      "type": "array",
      "default": [],
      "format": "segment",
      "options": {}
    },
    {
      "name": "synchronized_user_segments_leave",
      "title": "Emit on Leaving these segments",
      "type": "array",
      "default": [],
      "format": "segment",
      "options": {}
    },
    {
      "name": "synchronized_user_attributes",
      "title": "Emit on Attribute change",
      "type": "array",
      "format": "trait",
      "default": []
    },
    {
      "name": "synchronized_account_segments",
      "title": "Account Filter",
      "description": "As a precondition to the triggers being evaluated, the account must belong to one of the defined segments.",
      "type": "array",
      "default": [],
      "format": "accountSegment"
    },
    {
      "name": "synchronized_account_segments_enter",
      "title": "Emit on Entering these segments",
      "type": "array",
      "default": [],
      "format": "accountSegment",
      "options": {}
    },
    {
      "name": "synchronized_account_segments_leave",
      "title": "Emit on Leaving these segments",
      "type": "array",
      "default": [],
      "format": "accountSegment",
      "options": {}
    },
    {
      "name": "synchronized_account_attributes",
      "title": "Emit on Attribute change",
      "type": "array",
      "format": "accountTrait",
      "default": []
    },
    {
      "name": "url",
      "title": "Webhook URL",
      "description": "URL to send the Webhook to",
      "default": "",
      "type": "string",
      "format": "string"
    }
  ],
  "settings_sections": [
    {
      "title": "Requests",
      "description": "",
      "properties": [
        "private_settings.url",
        "private_settings.headers",
        "private_settings.throttle_rate",
        "private_settings.throttle_per_rate",
        "private_settings.concurrency"
      ]
    },
    {
      "title": "User Triggers",
      "description": "This section defines the conditions for emitting a User Webhook. Any of those being true will result in a webhook being sent. Only one webhook will be sent if multiple conditions match",
      "properties": [
        "private_settings.synchronized_user_segments",
        "private_settings.synchronized_user_events",
        "private_settings.synchronized_user_segments_enter",
        "private_settings.synchronized_user_segments_leave",
        "private_settings.synchronized_user_attributes"
      ]
    },
    {
      "title": "Account Triggers",
      "description": "This section defines the conditions for emitting an Account Webhook. Any of those being true will result in a webhook being sent. Only one webhook will be sent if multiple conditions match",
      "properties": [
        "private_settings.synchronized_account_segments",
        "private_settings.synchronized_account_segments_enter",
        "private_settings.synchronized_account_segments_leave",
        "private_settings.synchronized_account_attributes"
      ]
    }
  ],
  "json": [
    {
      "url": "/config",
      "handler": "configHandler",
      "options": {
        "cacheContextFetch": false
      }
    },
    {
      "url": "/entry",
      "handler": "entityHandler",
      "options": {
        "cacheContextFetch": false,
        "respondWithError": true
      }
    },
    {
      "url": "/preview",
      "handler": "previewHandler",
      "options": {
        "cacheContextFetch": false
      }
    }
  ],
  "deployment_settings": [],
  "readme": "readme.md",
  "ui": false,
  "resources": [],
  "subscriptions": [
    {
      "url": "/smart-notifier",
      "channels": [
        {
          "channel": "user:update",
          "handler": "userUpdate"
        },
        {
          "channel": "account:update",
          "handler": "accountUpdate"
        }
      ],
      "conditions": {
        "segments": {
          "user:update": [
            "private_settings.synchronized_segments_enter",
            "private_settings.synchronized_segments_leave"
          ]
        },
        "channels": {
          "only": [
            "user:update",
            "account:update",
            "ship:update"
          ]
        }
      }
    }
  ],
  "status": {
    "url": "/status",
    "type": "interval",
    "value": "60"
  }
}
